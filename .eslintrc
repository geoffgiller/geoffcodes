{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"prettier",
		"prettier/react"
	],
	"rules": {
		"react/prop-types": 0,
		"react/display-name": 0,
		"semi": ["error", "always"],
		"no-console": "warn",
		"no-unused-vars": "warn",
		"no-undef": "warn",
		"no-useless-escape": "off",
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	},
	"parser": "babel-eslint",
	"plugins": ["react", "import", "react-hooks"],
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"settings": {
		"react": {
			"pragma": "React",
			"version": "16.11.0"
		}
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	}
}
